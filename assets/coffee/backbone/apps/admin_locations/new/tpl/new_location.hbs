<form class="form-horizontal" role="form">
  <div class="form-group">
    <label for="name" class="col-sm-3 control-label">Name</label>
    <div class="col-sm-9">
      <div class="row">
        <div class="col-sm-5">
          <input type="text" class="form-control" id="name" placeholder="Name">
        </div>
        <div class="col-sm-7">
          <small>Ex: Mars, Earth, 14th Street</small>
        </div>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="description" class="col-sm-3 control-label">Description</label>
    <div class="col-sm-9">
      <textarea id="description" class="form-control" rows="3" name="description"></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="danger" class="col-sm-3 control-label">Danger</label>
    <div class="col-sm-9">
      <ul class="list-inline">
        {{#each dangerLookups}}
          <li>
            <label>
              <input type="radio" name="danger" value="{{@key}}">
              <span class="label label-{{.}}">{{capitalizeFirst @key}}</span>
            </label>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>


</form>
