<form class="form-horizontal" role="form">
  <div class="form-group">
    <label class="control-label col-lg-3">ID</label>
    <div class="col-lg-9">
      <p class="form-control-static">{{_id}}</p>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-lg-3" for="event-date">Date</label>
    <div class="col-lg-9">
      <input type="text" id="event-date" class="form-control" value="{{date}}" name="date" />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-lg-3" for="event-name">Name</label>
    <div class="col-lg-9">
      <input type="text" id="event-name" class="form-control" value="{{name}}" name="name" />
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-lg-3" for="event-description">Description</label>
    <div class="col-lg-9">
      <textarea id="event-description" class="form-control" name="description">{{description}}</textarea>
    </div>
  </div>

</form>
